<Page x:Class="Rieltenek.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rieltenek.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button Name="btnCreateClient" Content="Создать клиента" Style="{StaticResource mainbtn}" Click="btnCreateClient_Click"/>
                <Button Name="btnComparison" Content="Сопоставить" Style="{StaticResource mainbtn}" Click="btnComparison_Click"/>
                <Button Name="btnNeeds" Content="Потребности" Style="{StaticResource mainbtn}" Click="btnNeeds_Click"/>
                <Button Name="btnClients" Content="Клиенты" Style="{StaticResource mainbtn}" Click="btnClients_Click"/>
                <Button Name="btnProperty" Content="Недвижимость" Style="{StaticResource mainbtn}" Click="btnProperty_Click"/>
                <Button Name="btnRealtor" Content="Риэлторы" Style="{StaticResource mainbtn}" Click="btnRealtor_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
